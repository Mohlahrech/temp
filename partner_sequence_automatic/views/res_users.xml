<odoo>


    <record id="view_users_form_pfp" model="ir.ui.view">
        <field name="name">res.users.form.pfp</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <!-- Find the 'name' field and insert the 'pfp' field after it -->
            <xpath expr="//field[@name='name']" position="after">
                <label for="pfp"/>
                            <h1><field name="pfp"/></h1>
            </xpath>
        </field>
    </record>






</odoo>


