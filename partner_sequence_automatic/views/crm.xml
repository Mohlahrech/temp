                <record id="view_tracking_search_custom" model="ir.ui.view">
            <field name="name">crm.lead.search.tracking</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <search string="Search Trackings">
                    <field name="name" string="Tracking"/>
                    <field name="partner_id" string="Patient" operator="child_of"/>
                    <field name="user_id" string="PFP"/>
                    <field name="country_id" string="Wilaya"/>
                    <field name="campaign_id" string="Hopital"/>
                    <field name="source_id" string="Source d'adhésion"/>
                    <field name="pharmacie"/>
                    <separator/>
                    <filter string="Mes Trackings" name="assigned_to_me" domain="[('user_id', '=', uid)]" help="Trackings assigned to me"/>
                    <filter string="Patients que je dois apeller" name="activities_my"
                            domain="[('activity_ids.user_id', '=', uid)]"
                            help="Show all opportunities with an activity assigned to me"/>
                    <filter string="Les apelle que je n'ai pas fait" name="activities_overdue"
                            domain="[('activity_ids.date_deadline', '&lt;', context_today().strftime('%Y-%m-%d'))]"
                            help="Show all opportunities with overdue activities"/>
                    <filter string="Les patient à apeller aujourdhui" name="activities_today"
                            domain="[('activity_ids.date_deadline', '=', context_today().strftime('%Y-%m-%d'))]"
                            help="Show all opportunities with activities scheduled for today"/>
                    <filter string="Les patient à apeller prochainement" name="activities_upcoming_all"
                            domain="[('activity_ids.date_deadline', '&gt;', context_today().strftime('%Y-%m-%d'))]"
                            help="Show all opportunities with upcoming activities"/>
                    <!-- Filters for boolean fields -->
                    <filter string="Produit Lofric" name="filter_bool_lofric" domain="[('bool_lofric', '=', True)]"/>
                    <filter string="Produit BD" name="filter_bool_bd" domain="[('bool_bd', '=', True)]"/>
                    <filter string="Produit Concurrent" name="filter_bool_concurent" domain="[('bool_concurent', '=', True)]"/>
                    <separator/>
                    <filter invisible="1" string="Late" name="late" domain="[('date_deadline', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>
                    <separator/>
                    <filter name="creation_date" date="create_date"/>
                    <group expand="0" string="Group By">
                        <filter string="PFP" name="salesperson" context="{'group_by':'user_id'}"/>
                        <filter string="Hopital" name="campaign" context="{'group_by':'campaign_id'}"/>
                        <filter string="Source" name="source" context="{'group_by':'source_id'}"/>
                        <filter string="Wilaya" name="country" context="{'group_by':'country_id'}"/>
                        <filter string="Date de création" name="creation_date_groupby" context="{'group_by':'create_date'}"/>
                        <filter string="Pharmacie" name="pharmacie" context="{'group_by':'pharmacie_id'}"/>
                        <filter string="Secteur" name="secteur" context="{'group_by':'secteur'}"/>
                        <filter string="Date d'adhésion (Jour)" name="date_adhesion_day" context="{'group_by':'date_adhesion:day'}"/>
                        <filter string="Date d'adhésion (Mois)" name="date_adhesion_month" context="{'group_by':'date_adhesion:month'}"/>
                        <filter string="Date d'adhésion (Année)" name="date_adhesion_year" context="{'group_by':'date_adhesion:year'}"/>
                        <filter string="Source d'adhésion" name="contact_name" context="{'group_by':'contact_name'}"/>
                        <filter string="Pathologie" name="pathologie" context="{'group_by':'pathologie'}"/>
                        <filter string="Charière" name="tag_ids" context="{'group_by':'tag_ids'}"/>
                    </group>
                </search>
            </field>
        </record>

