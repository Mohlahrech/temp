<odoo>
    <data>

         <record id="view_tracking_form_custom" model="ir.ui.view">
            <field name="name">crm.tracking.form.patient</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="sale_crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_view_sale_quotation']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>


             </field>
        </record>


<!--        hide the create quotation button-->
        <record id="crm_case_form_view_oppor_inherited" model="ir.ui.view">
            <field name="name">crm.lead.oppor.inherited.crm</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="sale_crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_sale_quotations_new']" position="attributes">
                    <attribute name="attrs">{'invisible': True}</attribute>
                </xpath>
            </field>
        </record>


        <record id="view_piste_form_custom" model="ir.ui.view">
            <field name="name">crm.lead.form.patient</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">

                 <xpath expr="//group[@name='lead_info']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='action_set_won_rainbowman']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='%(crm.action_crm_lead2opportunity_partner)d']" position="attributes">
                    <attribute name="string">Convertir en tracking</attribute>
                    <attribute name="attrs">{'invisible': ['|', ('patient_ref', '=', False), ('type', '=', 'opportunity')]}</attribute>
                </xpath>
                <xpath expr="//field[@name='priority']" position="attributes">
                        <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='tag_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/notebook" position="replace">
                        <notebook>

                            <page string="Informations" attrs="{'invisible': [('type', '!=', 'lead')]}">
                                <group>
                                    <group string="Informations du patient">
                                        <field name="date_of_birth" string="Date de naissance"/>
                                        <label for="street_page_lead" string="Adresse"/>
                                        <div class="o_address_format">
                                            <field name="street" id="street_page_lead" placeholder="Rue..." class="o_address_street"/>
                                            <field name="state_id" placeholder="Wilaya" class="o_address_state" options='{"no_open": True}'/>
                                            <field name="country_id" placeholder="Pays" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                        </div>
                                        <field name="email_from" string="Email"/>
                                        <field name="phone" string="Téléphone"/>
                                        <field name="mobile" string="2eme téléphone"/>
                                    </group>
                                     <group string="Informations supplémentaires">
                                        <field name="contact_name" string="Source d'adhésion"/>
                                        <field name="tag_ids" string="Charière" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                        <field name="campaign_id" string="Hôpital"/>
                                        <field name="pharmacie_id" string="Pharmacie" options="{'no_create': True}"/>
                                        <field name="pharmacie" string="Pharmacie concurrente"/>
                                        <field name="doctor" string="Médecin"/>
                                        <field name="pathologie" string="Pathologie"/>
                                        <field name="cause_pathologie2" string="Cause de la pathologie"/>
                                        <field name="date_adhesion" string="Date d'adhésion"/>
                                        <field name="create_date" string="Date de création de la piste"/>
                                    </group>
                                    <group string="Informations assurance">

                                           <field name="source_id" string="Sécurité Sociale"/>
                                            <field name="wilaya_cnas2" string="Wilaya CNAS" options='{"no_open": True, "no_create": True}'/>
                                            <field name="antene_caisse" string="Antenne Caisse"/>
                                            <field name="date_of_accord" string="Date Accord Caisse"/>
                                    </group>
                                </group>
                            </page>


                            <!-- 👤 Informations Personnelles -->
                            <page string="👤 Informations Personnelles" attrs="{'invisible': [('type', '=', 'lead')]}">
                                <group>
                                    <group string="Informations du patient">
                                        <field name="phone"/>
                                        <field name="mobile"/>
                                        <field name="email_from"/>
                                        <field name="date_of_birth" string="Date de naissance"/>
                                        <label for="street_page_lead" string="Adresse"/>
                                        <div class="o_address_format">
                                            <field name="street" id="street_page_lead" placeholder="Rue..." class="o_address_street"/>
                                            <field name="state_id" placeholder="Wilaya" class="o_address_state" options='{"no_open": True}'/>
                                            <field name="country_id" placeholder="Pays" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                        </div>
                                    </group>

                                </group>
                            </page>

                            <!-- 🏥 Informations Médicales -->
                            <page string="🏥 Informations Médicales" attrs="{'invisible': [('type', '=', 'lead')]}">
                                <group>
                                    <group string="Informations médicales">
                                        <field name="contact_name" string="Source d'adhésion"/>
                                        <field name="tag_ids" string="Charière" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                        <field name="campaign_id" string="Hôpital"/>
                                        <field name="pharmacie_id" string="Pharmacie" options="{'no_create': True}"/>
                                        <field name="pharmacie" string="Pharmacie concurrente"/>
                                        <field name="doctor" string="Médecin"/>
                                        <field name="pathologie" string="Pathologie"/>
                                        <field name="cause_pathologie2" string="Cause de la pathologie"/>
                                        <field name="date_adhesion" string="Date d'adhésion"/>
                                        <field name="create_date" string="Date de création de la piste"/>
                                    </group>
                                </group>
                                <group string="Produit Utilisé">
                                    <field name="bool_lofric" string="Utilise Lofric"/>
                                    <field name="bool_bd" string="Utilise BD"/>
                                    <field name="bool_concurent" string="Utilise Concurrent"/>
                                </group>
                            </page>

                            <!-- 🛡️ Assurances -->
                            <page string="🛡️ Assurances" attrs="{'invisible': [('type', '=', 'lead')]}">
                                <group>
                                    <group string="Assurance">
                                        <field name="source_id" string="Sécurité Sociale"/>
                                        <field name="wilaya_cnas2" string="Wilaya CNAS" options='{"no_open": True, "no_create": True}'/>
                                        <field name="antene_caisse" string="Antenne Caisse"/>
                                        <field name="date_of_accord" string="Date Accord Caisse"/>
                                    </group>
                                </group>
                            </page>

                              <!-- 📞 Call List -->
                            <page string="📞 Liste des Appels" attrs="{'invisible': [('type', '=', 'lead')]}">
                                <button name="action_create_activity"
                                        type="object"
                                        string="Planifier les appels"
                                        class="btn-primary mb-2"
                                        icon="fa-calendar"/>
                                <field name="call_ids">
                                    <tree default_order="date_recup asc">
                                        <field name="date_call" string="Date de l'appel" optional="show"/>
                                        <field name="product_id" string="Produit 1" options="{'no_create': True}" optional="hide"/>
                                        <field name="product_qty" string="Quantité 1" optional="hide"/>
                                        <field name="product_id2" string="Produit 2" options="{'no_create': True}" optional="hide"/>
                                        <field name="product_qty2" string="Quantité 2" optional="hide"/>
                                        <field name="pharmacie_id2" string="Pharmacie" options="{'no_create': True}" optional="hide"/>
                                        <field name="date_recup" string="Date de récupération" optional="hide"/>
                                        <field name="commentaire" string="Commentaire" optional="hide"/>
                                    </tree>
                                </field>
                            </page>

                            <!-- 🔄 Switchs -->
                            <page string="🔄 Switchs" attrs="{'invisible': [('type', '=', 'lead')]}">
                                <field name="switch_ids">
                                    <tree>
                                        <field name="Date" string="Date" optional="show"/>
                                        <field name="name" string="Nom" optional="show"/>
                                        <field name="product_rec" string="Produit reçu" optional="show"/>
                                        <field name="product_qty" string="Quantité" optional="show"/>
                                        <field name="pharmacie" string="Pharmacie" optional="show"/>
                                        <field name="commentaire" string="Commentaire" optional="show"/>
                                    </tree>
                                </field>
                            </page>


                            <!-- 📝 Notes Supplémentaires -->
                            <page string="📝 Notes" name="internal_notes">
                                <field name="description" placeholder="Informations supplémentaires..." options="{'collaborative': true}"/>
                            </page>

                        </notebook>

                </xpath>
                <xpath expr="//group[@name='opportunity_partner']/field[@name='partner_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//group[@name='opportunity_partner']/field[@name='partner_id']" position="before">
                </xpath>
                 <xpath expr="//h2[@class='d-flex gap-2 g-0 align-items-end pb-3']" position="replace">
                    <field name="probability" invisible="1"/>
                    <h1 class="d-flex align-items-center" style="gap: 4px;">
                                <span style="font-size: 0.7em;">Code patient:</span>
                                <field name="patient_ref" placeholder="Patient No." style="font-size: 0.7em;" readonly="1"/>
                                <button name="create_partner_from_lead"
                                    type="object"
                                    string="Créer patient"
                                    class="btn btn-primary btn-sm ms-2"
                                    attrs="{'invisible': [('patient_ref', '!=', False)]}"/>
                            </h1>
                </xpath>
                <xpath expr="//h1/field[@name='name']" position="after">
                </xpath>
                 <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="placeholder">Nom et prénom</attribute>
                </xpath>
                <xpath expr="//field[@name='street2']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='street']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='street']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='city']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='state_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='country_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='zip']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='title']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='team_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='website']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='function']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='email_cc']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                 <xpath expr="//field[@name='partner_id']" position="replace">
                </xpath>
                <xpath expr="//sheet" position="before">
                    <field name="has_duplicate_phone" invisible="1"/>
                    <div class="alert alert-warning" style="margin-bottom: 10px;"
                        attrs="{'invisible': ['|', ('has_duplicate_phone', '=', False), ('type', '=', 'opportunity')]}">
                        <strong>Attention:</strong> Un patient avec le même numéro de téléphone existe déjà.
                    </div>
                </xpath>
                <xpath expr="//field[@name='email_from']" position="replace">
                    <group colspan="2">
                         <group>
                              <field name="user_id" string="PFP" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                         </group>
                    </group>
                 </xpath>
                 <xpath expr="//field[@name='user_id']" position="before">
                 </xpath>
                 <xpath expr="//field[@name='contact_name']" position="attributes">
                 </xpath>
                 <xpath expr="//field[@name='contact_name']" position="after">
                 </xpath>
                 <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                 </xpath>
            </field>
        </record>

        <record id="view_patient_kanban" model="ir.ui.view">
            <field name="name">patient.kanban.custom</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <kanban default_order="create_date asc" class="o_res_partner_kanban" sample="1">
                        <field name="name"/>
                        <field name="ref"/>
                        <field name="phone"/>
                        <field name="street"/>
                        <field name="street2"/>
                        <field name="zip"/>
                        <field name="city"/>
                        <field name="country_id"/>
                        <field name="mobile"/>
                        <field name="state_id"/>
                        <field name="avatar_128"/>
                        <field name="active"/>
                        <templates>
                            <t t-name="kanban-box">
                                <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                                    <t>
                                        <div class="o_kanban_image_fill_left o_kanban_image_full"
                                             t-attf-style="background-image: url(#{kanban_image('res.partner', 'avatar_128', record.id and record.id.raw_value)})"
                                             role="img"/>
                                    </t>

                                    <div class="ribbon ribbon-top-right" attrs="{'invisible': [('active', '=', True)]}">
                                        <span class="bg-danger">Archivé</span>
                                    </div>
                                    <div class="oe_kanban_details d-flex flex-column justify-content-between">
                                        <div>
                                            <strong class="o_kanban_record_title oe_partner_heading"><field name="display_name" invisible="1"/></strong>
                                            <strong class="o_kanban_record_title oe_partner_heading"><field name="ref"/></strong>
                                            <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                            <ul>
                                                <li>
                                                    <span style="font-weight: bold; font-size: 16px;">
                                                        <field name="translated_display_name"/>
                                                    </span>
                                                </li>

                                            </ul>
                                            <ul>
                                                <field name="phone" string="Tel:"/>
                                                <field name="mobile" string="Mob:"/>
                                            </ul>
                                            <ul>
                                                <li>
                                                    <field name="telecomercial"/>
                                                </li>

                                            </ul>
                                        </div>
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left"/>
                                            <div class="oe_kanban_bottom_right"/>
                                        </div>
                                    </div>
                                </div>
                            </t>

                        </templates>
                    </kanban>
            </field>
        </record>

        <!-- Define the tree view -->
        <record id="view_patient_tree" model="ir.ui.view">
            <field name="name">patient.tree.custom</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree default_order="create_date asc">
                    <!-- Add the fields you want to display in the tree view -->

                        <field name="ref" string="Code"/>
                        <field name="name" string="Nom / Prénom"/>
                        <field name="phone"/>
                        <field name="mobile"/>
                        <field name="telecomercial" string="PFP"/>
                        <field name="hospital_id" string="Hopital"/>

                </tree>
            </field>
        </record>

        <!-- Custom form view for Patients (specific to action_patients) -->
       <record id="view_patient_form_custom" model="ir.ui.view">
            <field name="name">res.partner.form.patient</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Patient Form">
                    <sheet>
                        <field name="image_1920" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h1 class="d-flex align-items-center" style="gap: 8px;">
                                <span style="font-size: 1em;">Code patient:</span>
                                <field name="ref" placeholder="Patient No." style="font-size: 1em; width: 400px;"/>
                            </h1>
                            <br/>
                            <br/>
                            <br/>
                        </div>
                        <group>
                            <group>
                                <field name="name" string="Nom et prénom"
                                       context="{'res_partner_search_mode':
                                        'customer',
                                        'show_address': 1, 'show_email':1}"
                                       options="{&quot;always_reload&quot;: True}"/>
                                <field name="phone"/>
                                <field name="mobile" string="2eme téléphone"/>
                                <field name="hospital_id" string="Hopital"/>
                                <field name="securite_id" string="Sécurité sociale"/>
                                <field name="date_of_birth"/>
                            </group>
                            <group>
                                <field name="telecomercial" string="Télécommercial (PFP)"
                                       style="float: right; width: 300px;"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Consommation">
                                <field name="crm_call_history_ids" readonly="1">
                                    <tree create="0" edit="0" delete="0" form="0">
                                        <field name="product_id"/>
                                        <field name="date_recup"/>
                                        <field name="pharmacie_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>



        <record id="view_patient_search" model="ir.ui.view">
            <field name="name">Patient Search</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search>
                    <!-- Add search fields -->
                    <field name="name" filter_domain="['|', '|', '|', '|', ('display_name', 'ilike', self), ('ref', 'ilike', self), ('email', 'ilike', self), ('vat', 'ilike', self), ('company_registry', 'ilike', self)]"/>
                    <field name="phone" filter_domain="['|', ('phone', 'ilike', self), ('mobile', 'ilike', self)]"/>
                    <!-- Add group by options -->
                    <group expand="1" string="Group By">
                        <filter name="group_by_hospital" string="Hopital" context="{'group_by':'hospital_id'}"/>
                        <filter name="group_by_telecommercial" string="PFP" context="{'group_by':'telecomercial'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!--        tree view of tracking-->

        <record id="crm_tracking_tree_view_oppor" model="ir.ui.view">
            <field name="name">crm.tracking.tree.opportunity</field>
            <field name="model">crm.lead</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <tree string="Trackings" sample="1" multi_edit="1">
                    <header>
                        <button name="%(crm.action_lead_mass_mail)d" type="action" string="Email" />
                    </header>
                    <field name="team_id" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name="user_company_ids" invisible="1"/>
                    <field name="date_deadline" invisible="1"/>
                    <field name="create_date" optional="hide"/>
                    <field name="name" string="Nom / Prénom" readonly="1"/>
                    <field name="patient_ref" optional="show" string="Code Patient"/>
                    <field name="phone" class="o_force_ltr"/>
                    <field name="mobile" class="o_force_ltr"/>
                    <field name="campaign_id" string="Hopital" optional="show"/>
                    <!-- Explicit domain due to multi edit -> real company domain would be complicated -->
                    <field name="user_id" string="PFP" widget="many2one_avatar_user" optional="show"
                        domain="[('share', '=', False)]"/>
                    <field name="activity_ids" widget="list_activity"/>
                    <field name="activity_user_id" optional="hide" string="Activity by" widget="many2one_avatar_user"/>
                    <field name="activity_calendar_event_id" invisible="1"/>
                    <field name="company_currency" invisible="1"/>
                    <field name="stage_id" optional="show" decoration-bf="1"/>
                    <field name="active" invisible="1"/>
                    <field name="tag_ids" string="Charière" optional="hide" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="referred" invisible="1"/>
                </tree>
            </field>
        </record>

<!--        kanban view of tracking-->
        <record id="crm_case_kanban_view_leads" model="ir.ui.view">
            <field name="name">crm.lead.kanban.lead</field>
            <field name="model">crm.lead</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id" class="o_kanban_small_column o_opportunity_kanban"
                    archivable="false" sample="1" js_class="crm_kanban">
                    <field name="stage_id" options='{"group_by_tooltip": {"requirements": "Description"}}'/>
                    <field name="color"/>
                    <field name="priority"/>
                    <field name="kanban_state"/>
                    <field name="activity_date_deadline"/>
                    <field name="user_id"/>
                    <field name="partner_id"/>
                    <field name="patient_ref"/>
                    <field name="activity_summary"/>
                    <field name="active"/>
                    <field name="company_currency"/>
                    <field name="activity_state" />
                    <field name="activity_ids" />
                    <field name="recurring_revenue_monthly"/>
                    <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'
                        sum_field="constant_one"
                        help="This bar allows to count the tracking number"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                                <div class="o_dropdown_kanban dropdown">
                                    <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" data-bs-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </div>
                                </div>
                                <div class="oe_kanban_content flex-grow-1">
                                    <div class="o_kanban_record_title oe_kanban_details">
                                        <t t-if="record.patient_ref.raw_value">
                                            <strong><field name="patient_ref"/></strong>
                                        </t>
                                        <t t-else="">
                                            <strong class="text-danger">Attention: patient non crée </strong>
                                            <br/>
                                            <button name="create_partner_from_lead"
                                                type="object"
                                                string="Créer patient"
                                                class="btn-secondary"/>
                                        </t>
                                    </div>
                                    <div class="o_kanban_record_title oe_kanban_details">
                                        <strong><field name="name"/></strong>
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        <t>
                                            <field name="phone"/>
                                        </t>
                                    </div>
                                     <div class="o_kanban_record_subtitle">
                                        <t>
                                            <field name="mobile"/>
                                        </t>
                                    </div>
                                    <div>
                                    </div>
                                    <div>
                                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    </div>
                                </div>
                                <div class="oe_kanban_footer">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="priority" widget="priority" groups="base.group_user"/>
                                            <field name="activity_ids" widget="kanban_activity"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
