<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Create category for blacklist management -->
        <record id="module_category_blacklist" model="ir.module.category">
            <field name="name">Contact Blacklist</field>
            <field name="description">Manage partner blacklist</field>
            <field name="sequence">20</field>
        </record>

        <!-- Create group for blacklist users -->
        <record id="group_blacklist_user" model="res.groups">
            <field name="name">Blacklist User</field>
            <field name="category_id" ref="module_category_blacklist"/>
            <field name="comment">Users in this group can view blacklisted partners</field>
        </record>

        <!-- Create group for blacklist managers -->
        <record id="group_blacklist_manager" model="res.groups">
            <field name="name">Blacklist Manager</field>
            <field name="category_id" ref="module_category_blacklist"/>
            <field name="implied_ids" eval="[(4, ref('group_blacklist_user'))]"/>
            <field name="comment">Users in this group can manage blacklist status</field>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="blacklist_partner_rule" model="ir.rule">
            <field name="name">Blacklist AccÃ©s</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="global" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    </data>
</odoo>
