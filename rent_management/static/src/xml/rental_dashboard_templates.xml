<?xml version="1.0" encoding="utf-8" ?>
<templates id="rental_dashboard" xml:space="preserve">
    <t t-name="rent_management.RentalDashboard" owl="1">
        <div class="rental_dashboard bg-light overflow-auto" t-ref="root">
            <div class="container py-4">
                <div class="row justify-content-center">
                    <div class="col-lg-8 col-md-10">
                        <div class="card shadow-sm mb-4 border-0">
                            <div class="card-body p-4 p-lg-5">
                                <div class="text-center mb-4">
                                    <i class="fa fa-car fa-3x text-primary mb-3"></i>
                                    <h1 class="h3 mb-0" t-out="state.translations.createRentalCustomer"/>
                                    <p class="text-muted" t-out="state.translations.quickCreateSubtext"/>
                                </div>
                                <div class="customer_creation_form" t-ref="customer_creation">
                                    <form t-on-submit.prevent="saveCustomer">
                                        <div class="row g-3">
                                            <!-- Basic Information -->
                                            <div class="col-md-12">
                                                <h5 class="text-primary" t-out="state.translations.basicInfo"/>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="customer-name" class="form-label"><t t-out="state.translations.fullName"/> <span class="text-danger">*</span></label>
                                                <input type="text" class="form-control form-control-lg" t-model="state.customerName" t-att-placeholder="state.translations.fullName" required="true"/>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="customer-phone" class="form-label"><t t-out="state.translations.phoneNumber"/> <span class="text-danger">*</span></label>
                                                <input type="tel" t-att-placeholder="state.translations.contactNumber" class="form-control form-control-lg" t-model="state.customerPhone" required="true"/>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="customer-mail" class="form-label" t-out="state.translations.emailAddress"/>
                                                <input type="email" class="form-control form-control-lg" t-model="state.customerMail" t-att-placeholder="state.translations.emailPlaceholder"/>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="customer-birthdate" class="form-label" t-out="state.translations.birthDate"/>
                                                <input type="date" class="form-control form-control-lg" t-model="state.birthDate"/>
                                            </div>

                                            <!-- Personal Information -->
                                            <div class="col-md-12 mt-4">
                                                <h5 class="text-primary" t-out="state.translations.personalInfo"/>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="customer-first-name" class="form-label" t-out="state.translations.firstName"/>
                                                <input type="text" class="form-control form-control-lg" t-model="state.firstName" t-att-placeholder="state.translations.firstName"/>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="customer-last-name" class="form-label" t-out="state.translations.lastName"/>
                                                <input type="text" class="form-control form-control-lg" t-model="state.lastName" t-att-placeholder="state.translations.lastName"/>
                                            </div>

                                            <!-- License Information -->
                                            <div class="col-md-12 mt-4">
                                                <h5 class="text-primary" t-out="state.translations.licenseInfo"/>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="customer-license" class="form-label" t-out="state.translations.licenseNumber"/>
                                                <input type="text" class="form-control form-control-lg" t-model="state.licenseNumber" t-att-placeholder="state.translations.licenseNumber"/>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="customer-license-date" class="form-label" t-out="state.translations.issueDate"/>
                                                <input type="date" class="form-control form-control-lg" t-model="state.licenseDate"/>
                                            </div>
                                            <div class="col-md-12">
                                                <label for="customer-license-auth" class="form-label" t-out="state.translations.issuingAuthority"/>
                                                <input type="text" class="form-control form-control-lg" t-model="state.licenseAuthority" t-att-placeholder="state.translations.issuingAuthority"/>
                                            </div>
                                        </div>
                                        <!-- Save Button -->
                                        <div class="text-center mt-4 pt-3">
                                            <button class="btn btn-primary btn-lg save_customer w-50" t-on-click="saveCustomer">
                                                <i class="fa fa-save me-2"></i><t t-out="state.translations.createAndStart"/>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
