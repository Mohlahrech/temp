<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View for Maintenance History -->
        <record id="view_historique_maintenance_tree" model="ir.ui.view">
            <field name="name">historique.maintenance.list</field>
            <field name="model">historique.maintenance</field>
            <field name="arch" type="xml">
                <list string="Repair History">
                    <field name="date"/>
                    <field name="vehicule_id"/>
                    <field name="type_maintenance" options="{'no_open': True}"/>
                    <field name="kilometrage"/>
                    <field name="note"/>
                </list>
            </field>
        </record>

        <!-- Form View for Maintenance History -->
        <record id="view_historique_maintenance_form" model="ir.ui.view">
            <field name="name">historique.maintenance.form</field>
            <field name="model">historique.maintenance</field>
            <field name="arch" type="xml">
                <form string="Repair Details">
                    <sheet>
                        <group>
                            <group>
                                <field name="vehicule_id"/>
                                <field name="date"/>
                                <field name="type_maintenance" options="{'no_open': True}"/>
                            </group>
                            <group>
                                <field name="kilometrage"/>
                                <field name="note"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
