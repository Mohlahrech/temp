<odoo>
    <data>
        <!-- Improved Invoice Form View with Print Contract Button -->
        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <!-- Add Print Contract button to header - only visible for paid invoices -->
                <xpath expr="//form/header" position="inside">
                    <field name="payment_state" invisible="1"/>  <!-- Hidden field for condition -->

                    <button name="action_print_sale_report"
                            string="Print Rental Contract"
                            type="object"
                            class="btn-success"
                            invisible="payment_state != 'paid'"
                            help="Generate and print the customer rental contract (available only for paid invoices)"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>