<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_form_view_maeva_inherit" model="ir.ui.view">
            <field name="name">product.template.form.maeva.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <div name="est_maintenance_option" groups="base.group_user">
                        <field name="est_maintenance"/>
                        <label for="est_maintenance"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="kilometrage_produit" string="Repair Interval (km)"
                           invisible="not est_maintenance"
                           required="est_maintenance"
                           groups="base.group_user"/>
                    <field name="maintenance_type"
                           string="Repair Type"
                           invisible="not est_maintenance"
                           required="est_maintenance"
                           groups="base.group_user"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo> 