<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Enhanced Quotation Tree View with Rental Status Indicators -->
        <record id="view_quotation_tree_inherit" model="ir.ui.view">
            <field name="name">sale.order.tree.inherit.rental_status</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <!-- Vehicle License Plate -->
                    <field name="vehicule_immatriculation" string="License Plate"/>

                    <!-- Rental Status with Color Coding -->
                    <field name="state_location"
                           string="Rental Status"
                           widget="badge"
                           optional="show"
                           decoration-info="state_location == 'reserve'"
                           decoration-primary="state_location == 'encours'"
                           decoration-warning="state_location == 'retour'"
                           decoration-danger="state_location == 'retard'"
                           decoration-success="state_location == 'done'"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>